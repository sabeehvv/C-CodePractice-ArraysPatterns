#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout,NULL);
	int i,j,k=0;
	for(i=1;i<5;i++){
		for(j=k+1;j<=i;j++){
			printf("%d ",j);
		}k++;
		printf("\n");
	}
	return EXIT_SUCCESS;
}
