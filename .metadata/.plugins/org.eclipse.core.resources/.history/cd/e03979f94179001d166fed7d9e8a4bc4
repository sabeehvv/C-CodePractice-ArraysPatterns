#include <stdio.h>
#include <stdlib.h>

void addArray(int);
void getArray(int);
void displayarray();
int main(void) {
	int size;
	setbuf(stdout,NULL);
	printf("enter the size of array");
	scanf("%d",&size);
	getArray(size);
	addArray(size);
	displayarray(size);

	return EXIT_SUCCESS;
}


void getArray(int size){
	int i,j;
	int value1[100][100],value2[100][100];
	printf("Enter the values of array 1\n");
	for(i=0;i<size;i++){
		for(j=0;j<size;j++){
		scanf("%d",&value1[i][j]);
		printf("\t");
	}printf("\n");
	}
	printf("\nEnter the values of array 2\n");
	for(i=0;i<size;i++){
		for(j=0;j<size;j++){
		scanf("%d",&value2[i][j]);
		printf("\t");
	}printf("\n");
}}


void addArray(int size){
	int sumvalue[100][100],i,j;
	//int value1[100][100],value2[100][100];
	for(i=0;i<size;i++){
		for(j=0;j<size;j++){
		sumvalue[i][j]=0;
	}
}}

void displayarray(int size){
	int i,j;
	int sumvalue1[100][100];
	printf("Sum of array-1 and array-2 :\n");
	for(i=0;i<size;i++){
		for(j=0;j<size;j++){
		printf("%d\t",sumvalue1[i][j]);
	}printf("\n");}
}

